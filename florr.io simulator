        biome = "garden"
    if biome != previousBiome:
        biomeChanged = True

if action == 3:
    pass

if action == 4:
    print("Resetting the game...")
    time.sleep(2)
    reset = True

out = open('florrio_simulator_save.txt', 'w')

if reset:
    for i in range(4):
        out.write("0/0/0/0/0/0/0/0\n")
    out.write("5/0/0/0/0/0/0/0\n")
    for i in range(74):
        out.write("0/0/0/0/0/0/0/0\n")
    out.write("garden\n")
else:
    for i in range(79):
        line = ""
        for j in range(8):
            line += str(petals[petalList[i]][rarities[j]])
            if j < 7:
                line += "/"
        line += "\n"
        out.write(line)
    if biomeChanged:
        out.write(biome.lower() + "\n")
    else:
        out.write(previousBiome + "\n")
